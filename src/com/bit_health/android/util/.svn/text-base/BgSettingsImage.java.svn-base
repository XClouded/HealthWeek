package com.bit_health.android.util;

import com.siat.healthweek.R;

/**********************************************************************
 * 类名：BgSettingsImage
 * 
 * 主要功能：背景设置的图片资源
 * 
 * @author 梁才学 创建日期：2014.2.17
 **********************************************************************/
public class BgSettingsImage {

	private Integer[] bgImage = { R.drawable.home_page_bg_1,
			R.drawable.home_page_bg_3, R.drawable.home_page_bg };

	public int getBgImage(int index) {

		for (int i = 0; i < bgImage.length; i++) {
			if (index == i) {
				return bgImage[i];
			}
		}

		return R.drawable.home_page_bg;
	}

	public int getArraysLength() {
		return bgImage.length;
	}
}
