<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_commu_bg" >
    
    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:text="@string/dandelion_scheme_body_commu"
        android:textColor="@color/white"
        android:layout_marginRight="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCaption" >

        <FrameLayout
            android:id="@+id/flCenterLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/flCenterLine"
            android:layout_alignParentLeft="true" >

            <RelativeLayout
                android:id="@+id/rlBodyCommuBlock1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_marginLeft="@dimen/dandelion_bodycommu_block_gap"
                android:layout_marginRight="@dimen/dandelion_bodycommu_block_gap"
                android:layout_marginBottom="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_idea_sharer"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock1"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/idea_sharer"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_margin="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock2" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/little_dandelion"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_margin="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock3" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/genius"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/flCenterLine"
            android:layout_alignParentRight="true" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_marginLeft="@dimen/dandelion_bodycommu_block_gap"
                android:layout_marginRight="@dimen/dandelion_bodycommu_block_gap"
                android:layout_marginBottom="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock4" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/intelligences"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_margin="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock5" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock5"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/doctor"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/block_bg"
                android:layout_margin="@dimen/dandelion_bodycommu_block_gap" >
                <ImageView
                    android:id="@+id/ivBodyCommuBlock6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"
                    android:layout_above="@+id/tvBodyCommuBlock6" />
                <TextView
                    android:id="@+id/tvBodyCommuBlock6"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/promising_future"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/body_commu_leftbottom"
        android:scaleType="fitStart"
        android:contentDescription="@string/app_name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
