<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <RelativeLayout
        android:id="@+id/rlLogInfo"
        android:layout_width="wrap_content"
        android:layout_height="50dp" >
        <ImageView
            android:id="@+id/ivUserPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_pic"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/welcomInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/welcomUserInfo"
            android:textColor="@color/bluetext" />
        <ImageView
            android:id="@+id/ivFlagLoggedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/flag_logged_in"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/flSepLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlLogInfo"
        android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/flSepLine" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/girl_image"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/tvPhysicalHealthData"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:text="@string/physical_health_data"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:layout_marginRight="5dp"
            android:background="@color/powderblue" />
        
    </RelativeLayout>

</RelativeLayout>
