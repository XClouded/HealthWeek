<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuqingwei.healthweek.MainFrame$PlaceholderFragment"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rlHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_frame_head_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_blue_actionbar" >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/head_back"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/tvRightCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivCurSubjectIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="@string/creator_platform"
            android:gravity="bottom"
            android:textColor="@color/head_text_color"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp" />
        <ImageView
            android:id="@+id/ivCurSubjectIcon"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_starting"
            android:contentDescription="@string/app_name"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFoot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_frame_foot_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_blue_footbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivCurSubjectIconInBottom"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_starting" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlFoot"
        android:layout_below="@+id/rlHead" >
    </RelativeLayout>

</RelativeLayout>