<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/waitfoecgsignid"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >

        <TextView
            android:id="@+id/textHowtest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/how_to_do_test"
            android:textColor="@color/color_text_red"
            android:textSize="@dimen/normal_textsize" />
        <Button android:id="@+id/switchbluetoothid"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/drlookresultselector"
            android:text="@string/switch_bluetooth"
            android:textSize="@dimen/normal_textsize"
            android:textColor="@color/lookresulttextcolorselector"
            android:layout_marginTop="5dip"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.69" >

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <RelativeLayout android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/handalert"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/flag_alert"
                android:text="@string/wait_for_test_remarks"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/normal_textsize" />
        </RelativeLayout>
        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.16"
        android:orientation="horizontal" >
        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7" >
            <TextView android:id="@+id/progresstextid"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/color_text_normal"
                android:text="@string/testing_remarks"/>
        </RelativeLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />
    </LinearLayout>

</LinearLayout>