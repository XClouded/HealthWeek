<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_device_list_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/device_select_imageviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ecg_test_dialog_item_padding"
        android:background="@drawable/device_slect_3n1" />

    <TextView
        android:id="@+id/device_select_textviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/ecg_test_dialog_item_padding"
        android:text="@string/device_select_3n1_string"
        android:textSize="@dimen/normal_textsize" />

</LinearLayout>